# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/thumbsapp

# Security
JWT_SECRET=thumbsapp-super-secret-key-change-this-in-production-2024
JWT_EXPIRES_IN=30d
BCRYPT_ROUNDS=12

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpeg,jpg,png,gif,webp,svg

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Features
ENABLE_WEBSOCKET=true
ENABLE_PUSH_NOTIFICATIONS=false
